 */

call_user_func(function(...$files) {
    foreach ($files as $file) {
        /** @noinspection PhpIncludeInspection */
        file_exists($file) && exit(call_user_func(require $file, function() {
            fn\di(__DIR__ . '/../config/di-cli.php')->call('cli');
        }));
    }
}, __DIR__ . '/../../../autoload.php', __DIR__ . '/../vendor/autoload.php');
